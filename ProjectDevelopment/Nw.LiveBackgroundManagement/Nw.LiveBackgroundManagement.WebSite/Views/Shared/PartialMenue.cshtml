<script type="text/javascript">
    function FoldMenue(event) {
        if ($(event).hasClass("open")) {  
            $(event).removeClass("open");
            var ul = $(event).find("ul");
            $(ul).attr("style", "display: block;");
        }
        else {   
            $(event).addClass("open");
            var ul = $(event).find("ul");
            $(ul).attr("style", "display: none;"); 
        }
    }
</script>