@using Nw.LiveBackgroundManagement.Models.ViewModel
@model RoomTypeViewModel
<div class="form-box">
        <div class="form-group">
            <label class="col-md-3 control-label">类别名称</label>
            <div class="col-md-8">
                <input type="hidden" value="@Model.Id" id="roomTypeId" name="Id">
                <input type="text" id="Text" value="@Model.Text" name="Text" class="form-control" placeholder="类别">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">类别描述</label>
            <div class="col-md-8">
                <textarea class="form-control" id="Description" name="Description" rows="3" placeholder="类别描述" style="margin: 0px -36.95px 0px 0px; width: 329px; height: 96px;">@Model.Description</textarea>
            </div>
        </div>
    </div>

